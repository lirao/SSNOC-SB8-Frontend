<form class="form-login col-md-4 col-md-offset-4" role="form" action="/login" method="POST">
  <h2 class="form-login-heading">Please log in</h2>
  <h6><font color="red">{{ . }}</font>&nbsp;</h6>
  <input type="text" name="userName" class="form-control" placeholder="User name" autofocus>
  <input type="password" name="password" class="form-control" placeholder="Password">
  </br>
  <button class="btn btn-lg btn-primary btn-block" type="submit">Log in</button>
  <h5>Or <a href="/signup">Sign up as a new user</a>.</h5>
</form>